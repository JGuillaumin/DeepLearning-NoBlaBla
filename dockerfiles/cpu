# Start with Ubuntu base image 
FROM ubuntu:14.04 
MAINTAINER Julien Guillaumin <julien.guillaumin@telecom-bretagne.eu> 

# Install build-essential, git, wget, python-dev, pip, BLAS + LAPACK and other dependencies 
RUN apt-get update && apt-get install -y \
	build-essential \
	gfortran \
	git \
	wget \
	liblapack-dev \
	libopenblas-dev \
	python-dev \
	python-pip \
	python-nose \
	python-numpy \
	python-scipy \
	python-matplotlib \
  	ipython \
  	ipython-notebook \ 
  	libhdf5-dev \
  	g++ \
  	graphviz

# Install bleeding-edge Theano 
RUN pip install --upgrade --no-deps git+git://github.com/Theano/Theano.git
RUN pip install --upgrade six
RUN pip install Pillow scikit-learn notebook pandas matplotlib nose pyyaml six h5py

# Clean apt-get tempory files
RUN rm -rf /var/lib/apt/lists/*
